<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:tint="?android:attr/colorAccent" android:shape="rectangle" android:alpha="0.6">
            <size android:height="10dp" />
            <solid android:color="#80626161" />
            <corners android:radius="69dp" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:tint="?android:attr/colorAccent" android:shape="rectangle">
                <size android:height="10dp" />
                <stroke android:width="1dp" android:color="#ffffffff" />
                <solid android:color="#ffffffff" />
                <corners android:radius="69dp" />
            </shape>
        </clip>
    </item>
</layer-list>